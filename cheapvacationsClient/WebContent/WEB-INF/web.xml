<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>cheapvacationsClient</display-name>
  <servlet>
    <description>login</description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>loginServlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <description>registration servlet</description>
    <display-name>RegisterServlet</display-name>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>loginServlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <description>servlet for lazy password recovery</description>
    <display-name>PasswordServlet</display-name>
    <servlet-name>PasswordServlet</servlet-name>
    <servlet-class>loginServlet.PasswordServlet</servlet-class>
  </servlet>
  <servlet>
    <description>update user data</description>
    <display-name>UpdateServlet</display-name>
    <servlet-name>UpdateServlet</servlet-name>
    <servlet-class>loginServlet.UpdateServlet</servlet-class>
  </servlet>
  <servlet>
    <description>logout and unsubscrube</description>
    <display-name>LogoutServlet</display-name>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>loginServlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <description>manage hotels</description>
    <display-name>HotelServlet</display-name>
    <servlet-name>HotelServlet</servlet-name>
    <servlet-class>manageServlet.HotelServlet</servlet-class>
  </servlet>
  <servlet>
    <description>manage hotel offers</description>
    <display-name>HotelOfferServlet</display-name>
    <servlet-name>HotelOfferServlet</servlet-name>
    <servlet-class>manageServlet.HotelOfferServlet</servlet-class>
  </servlet>
  <servlet>
    <description>servlet to manage flights</description>
    <display-name>FlightServlet</display-name>
    <servlet-name>FlightServlet</servlet-name>
    <servlet-class>manageServlet.FlightServlet</servlet-class>
  </servlet>
  <servlet>
    <description>servlet to manage Flight Offers</description>
    <display-name>FlightOfferServlet</display-name>
    <servlet-name>FlightOfferServlet</servlet-name>
    <servlet-class>manageServlet.FlightOfferServlet</servlet-class>
  </servlet>
  <servlet>
    <description>servlet to manage Packages</description>
    <display-name>PackageServlet</display-name>
    <servlet-name>PackageServlet</servlet-name>
    <servlet-class>manageServlet.PackageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PasswordServlet</servlet-name>
    <url-pattern>/PasswordServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/UpdateServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HotelServlet</servlet-name>
    <url-pattern>/HotelServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HotelOfferServlet</servlet-name>
    <url-pattern>/HotelOfferServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FlightServlet</servlet-name>
    <url-pattern>/FlightServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FlightOfferServlet</servlet-name>
    <url-pattern>/FlightOfferServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PackageServlet</servlet-name>
    <url-pattern>/PackageServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>manage customer cart</description>
    <display-name>CartServlet</display-name>
    <servlet-name>CartServlet</servlet-name>
    <servlet-class>manageServlet.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CartServlet</servlet-name>
    <url-pattern>/CartServlet</url-pattern>
  </servlet-mapping>
</web-app>